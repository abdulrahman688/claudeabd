# ============================================
# SYRIAN RENAISSANCE PLATFORM - ENVIRONMENT VARIABLES
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/srp_db?schema=public

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CLAUDE AI (Anthropic)
# ============================================
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=500

# ============================================
# FILE STORAGE (AWS S3 or Cloudflare R2)
# ============================================
STORAGE_TYPE=local
# For production, use S3 or R2:
# STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=srp-uploads

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:8081
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8081

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_VOICE_MESSAGES=true
ENABLE_COMMUNITY=true
ENABLE_JOBS=true
ENABLE_ANALYTICS=true

# ============================================
# CRISIS SUPPORT
# ============================================
CRISIS_HOTLINE_SYRIA=+963-XXX-XXX-XXX
CRISIS_HOTLINE_TURKEY=+90-XXX-XXX-XXX
CRISIS_EMAIL=support@srp-platform.org

# ============================================
# PAYMENT (Payoneer Integration - Future)
# ============================================
PAYONEER_API_KEY=
PAYONEER_API_SECRET=
PAYONEER_WEBHOOK_SECRET=
